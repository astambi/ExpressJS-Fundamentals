<h1>Welcome to SoftUni Wiki!</h1>
<div class="spacer">
    <h2>{{title}} 
        
        {{#if currentUser}}
        <div class="controls">

            {{#if isLocked}} 
                {{#if isAdmin}}
                <a href="/articles/edit/{{id}}">[edit]</a>
                {{/if}} 
            {{else}}
                <a href="/articles/edit/{{id}}">[edit]</a>
            {{/if}}

            <a href="/articles/history/{{id}}">[history]</a>
        </div>
        {{/if}}

    </h2>

    <article>
        {{#each paragraphs}}
        <p> {{this}} </p>
        {{/each}}
    </article>
</div>