<h1>Customize your order</h1>

<div class="catalog">
    <div class="column">
        <img src="/img/{{imageUrl}}">
    </div>
    <div class="column">

        <h2>{{productName}}</h2>

        <h3>Toppings</h3>
        <div class="toppings">

            <form id="order-form" method="POST" action="/orders/create">
                <input name="productId" type="hidden" value="{{id}}"> 
                
                {{#each toppings}}
                <input name="{{this}}" type="checkbox" value="{{this}}" checked>
                <label for="{{this}}">{{this}}</label>
                <br> 
                {{else}}
                <p>No toppings available</p>
                {{/each}}
                
            </form>

        </div>

        <a class="button" href="javascript:document.getElementById('order-form').submit()">
            Checkout
        </a>
    </div>
</div>