<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <title>Car Renting System</title>
    <link rel="stylesheet" type="text/css" href="/css/style.css" />
    <link rel="icon" href="/favicon.ico?" />
</head>

<body class="preload">
    <header>
        <nav>
            <img id="logo" src="/logo.png" alt="logo" />
            <ul id="main-nav">
                <li>
                    <a href="/">home</a>
                </li>
                <li>
                    <a href="/cars/all">all cars</a>
                </li>
                <li>
                    <a href="/cars/create">add car</a>
                </li>
                {{#if isAdmin}}
                <li>
                    <a href="/cars/admin">Admin</a>
                </li>
                {{/if}}
                <li>
                    <a href="/users/profile">profile</a>
                </li>
            </ul>

            <ul id="user">
                {{#if currentUser}}
                <!-- <li>{{currentUser.username}}</li> -->
                <li>
                    <form id="logout-form" action="/users/logout" method="POST"> </form>
                    <a href="javascript:document.getElementById('logout-form').submit()">Logout</a>
                </li>
                {{else}}
                <li>
                    <a href="/users/register">Register</a>
                </li>
                <li>
                    <a href="/users/login">Login</a>
                </li>
                {{/if}}
            </ul>
        </nav>
    </header>

    <main>
        <section id="notifications-container">
            {{#if globalError}}
            <h3>{{globalError}}</h3>
            {{/if}}
        </section>

        <section id="main-container">
            {{{body}}}
        </section>
    </main>

    <footer>
        <span>Authentication exercise</span>
    </footer>

    <script>
        document.onload = function () {
            document
                .querySelector('body')
                .classList
                .remove('preload');
        }
    </script>
</body>

</html>